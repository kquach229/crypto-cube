generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId Int @id @default(autoincrement())
  email String @unique
  name String
  watchlisted_coins Coin[] @relation("UserCoins")
  watchlisted_nfts Nft[] @relation("UserNfts")
}


model Coin {
  id  String @id
  name String
  Symbol String
  image String?
  watchlisted_by User[] @relation("UserCoins")
}

model Nft {
  id String @id
  contract_address String?
  name String
  asset_platform_id String
  symbol String
  watchlisted_by User[] @relation("UserNfts")
}